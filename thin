sudo pacman -S --noconfirm xfce4-session xfce4-terminal lightdm git pulseaudio lightdm-gtk-greeter xfwm4
sudo systemctl enable lightdm
git clone https://aur.archlinux.org/yay-bin.git
cd yay-bin
makepkg -si --noconfirm
yay -S --noconfirm vmware-horizon-rtav
sudo useradd --create-home user1
sudo groupadd -r autologin
sudo gpasswd -a user1 autologin
sudo sed -i '/#autologin-user=/c\autologin-user=user1' /etc/lightdm/lightdm.conf
sudo curl https://raw.githubusercontent.com/msl6030/arch/main/thin.st.sh -o /home/user1/st.sh
sudo chown user1:root /home/user1/st.sh
sudo mkdir /home/user1/.config
sudo chown user1:root /home/user1/.config
sudo mkdir /home/user1/.config/autostart
sudo chown user1:root /home/user1/.config/autostart
sudo curl https://raw.githubusercontent.com/msl6030/arch/main/thin.vmw.desktop -o /home/user1/.config/autostart/vmw.desktop
sudo chown user1:root /home/user1/.config/autostart/vmw.desktop
